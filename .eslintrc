{
  "extends": "airbnb",
  "globals": {
    "it": false,
    "describe": false,
    "before": false
  },
  "rules": {
    "max-len": [
      "error",
      {
        "code": 120,
        "tabWidth": 2
      }
    ],
    "no-underscore-dangle": [
      "error",
      {
        "allow": ["_id", "_conditions", "_update"]
      }
    ]
  }
}
